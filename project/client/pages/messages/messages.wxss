.swiper-tab{   
    width: 100%;  
    background-color: #fff;
    display: flex;
    color: #999;
    font-size: 28rpx;
    border-bottom: 1px solid #dcdcdc;
    position: fixed;
    z-index: 999;
}
.swiper-tab-list{  
    flex: 1;
    padding: 28rpx 0;
    text-align: center;
}  
.on{ 
    color: #84C7FF;  
    border-bottom: 6rpx solid #84C7FF;
}  
.swiper-box{
  padding-top:90rpx; 
  width: 100%;
}
/* .swiper-item-box{
  width: 100%;

  position: relative;
} */
.item{margin-top: 20rpx;}
.item-main{border: none;}

.content-box{
  padding: 0 28rpx;
  background-color: #fff;
}
.content{
  border-top: 1rpx dashed #dcdcdc;
  padding: 40rpx 0;
  width: 100%;  
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}
.list{margin-bottom: 24rpx;}
.list-left{
  color: #999;
  margin-right: 96rpx;
}


.mes-null{
  margin-top: 20rpx; 
  text-align: center;
  height: 500rpx;
}
.icon-null{
  width: 200rpx;
  height:200rpx;
  margin-bottom: 20rpx; 
}
.hint{
  font-size: 24rpx;
  color:#999;
}
.auto-scroll{
  height: 100%;
}
.nearCard-fl {
  width: 40%;
  float: left;  
}

.nearCard-fl image {
   width: 200rpx;
   height: 200rpx; 
   padding: 8% 15%;  
   border-radius: 100%;
}
/* .boder_image{
  
} */
.nearCard-fr {
  font-size: 27rpx;
  line-height: 50rpx;
  display: flex;
  flex-direction: column;
  width: 60%;
  margin-left: 40%;
  margin-top: 10rpx;
  color: #84C7FF;
}

.nearCard-fr text {
  font-size: 27rpx;
}

.card {
  width: 95%;
  background-color: #fff;
  margin: 20rpx auto 0;
  border-radius: 20rpx; 
}

.b-shadow {
  box-shadow: 10rpx 10rpx 20rpx #C6F0F0;
}

.down {
  background-color: #efefef;
  border-bottom-left-radius: 20px;
  border-bottom-right-radius: 20rpx;
}

.down view {
   font-size: 26rpx; 
   color: #999; 
  line-height: 50rpx;
} 

.clearfix {
  zoom: 1;
  clear: both;
}

.delete {
  text-align: center;
  background-color: #84C7FF;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
  padding: 15rpx 0;
  margin: 10rpx 0 0 0;
}

.delete_style{
  color: #fff;
  font-size: 30rpx;
}
